{
  "name": "aws-sdk-client-mock",
  "description": "Easy and powerful mocking of AWS SDK v3 Clients",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Maciej Radzikowski",
    "email": "maciej@radzikowski.com.pl",
    "url": "https://radzikowski.com.pl"
  },
  "repository": "https://github.com/m-radzikowski/aws-sdk-client-mock.git",
  "keywords": [
    "aws",
    "aws-sdk",
    "testing",
    "mock",
    "unit-testing",
    "aws-lambda"
  ],
  "scripts": {
    "prepare": "husky install",
    "ci": "yarn install --frozen-lockfile",
    "pretest": "rimraf coverage/",
    "test": "jest --coverage",
    "test-types": "tsd",
    "test-e2e": "ts-node test-e2e/simple/run.ts",
    "lint": "eslint .",
    "typedoc": "typedoc",
    "build:cjs": "tsc -p tsconfig.json",
    "build:es": "tsc -p tsconfig.es.json",
    "prebuild": "rimraf dist/",
    "build": "yarn run build:cjs && yarn run build:es",
    "size": "size-limit",
    "size:analyze": "size-limit --why",
    "release": "standard-version",
    "verdaccio": "rimraf verdaccio-storage && verdaccio -c verdaccio.yml",
    "local-publish": "npm publish --registry http://localhost:4873/"
  },
  "module": "dist/es/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@types/sinon": "10.0.10",
    "sinon": "^11.1.1",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "3.49.0",
    "@aws-sdk/client-s3": "3.49.0",
    "@aws-sdk/client-sns": "3.49.0",
    "@aws-sdk/client-sqs": "3.49.0",
    "@aws-sdk/lib-dynamodb": "3.49.0",
    "@aws-sdk/types": "3.49.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@size-limit/preset-small-lib": "5.0.3",
    "@types/jest": "27.4.0",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "eslint": "8.17.0",
    "extract-changelog-release": "1.0.2",
    "husky": "7.0.4",
    "jest": "27.5.0",
    "lint-staged": "11.1.2",
    "rimraf": "3.0.2",
    "size-limit": "5.0.3",
    "standard-version": "9.3.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "tsd": "0.19.1",
    "typedoc": "0.22.17",
    "typescript": "4.6.2",
    "verdaccio": "5.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "resetMocks": true,
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "test-e2e",
      "verdaccio-storage"
    ]
  },
  "lint-staged": {
    "*.ts": "yarn lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "size-limit": [
    {
      "path": "dist/cjs/index.js",
      "limit": "300 KB"
    },
    {
      "path": "dist/es/index.js",
      "limit": "300 KB"
    }
  ]
}
