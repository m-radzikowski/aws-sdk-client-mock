{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
